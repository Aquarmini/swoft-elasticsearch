{
    "name": "limingxinleo/swoft-elasticsearch",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "swoole",
        "swoft",
        "db",
        "model"
    ],
    "description": "基于Swoft的Elasticsearch客户端组件",
    "authors": [
        {
            "name": "李铭昕",
            "email": "limingxin@swoft.org"
        }
    ],
    "autoload": {
        "psr-4": {
            "Swoftx\\Elasticsearch\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SwoftTest\\": "tests"
        }
    },
    "require": {
        "php": ">=7.0",
        "elasticsearch/elasticsearch": "^6.0"
    },
    "require-dev": {
        "swoft/swoole-ide-helper": "dev-master",
        "phpunit/phpunit": "^7.0"
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1",
        "test": "./tests/co-phpunit -c phpunit.xml --colors=always"
    }
}
